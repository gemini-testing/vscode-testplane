{
  "name": "vscode-hermione",
  "displayName": "Hermione",
  "description": "Integration Hermione with VS Code",
  "version": "0.0.1",
  "publisher": "gemini-testing",
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Testing"
  ],
  "activationEvents": [
    "workspaceContains:node_modules/.bin/hermione",
    "onCommand:hrm.install"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "category": "Test",
        "command": "hrm.install",
        "title": "Install Hermione"
      }
    ],
    "keybindings": {
      "command": "workbench.action.terminal.runSelectedText",
      "key": "ctrl+shift+8",
      "mac": "cmd+shift+8",
      "when": "editorTextFocus && editorLangId =~ /(javascript|typescript)/"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gemini-testing/vscode-hermione.git"
  },
  "license": "MIT",
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "rimraf out && esbuild ./src/extension.ts --bundle --outdir=out --external:vscode --format=cjs --platform=node --target=ES2022",
    "build": "npm run esbuild-base -- --sourcemap",
    "watch": "npm run esbuild-base -- --sourcemap --watch",
    "test": "npm run lint",
    "eslint": "eslint src --ext ts --cache",
    "lint": "npm run eslint && prettier --check src/**/*.ts",
    "reformat": "npm run eslint -- --fix && prettier --write src/**/*.ts",
    "precommit": "npm run lint",
    "commitmsg": "commitlint -e",
    "release": "standard-version"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.2",
    "@types/node": "18.x",
    "@types/vscode": "^1.86.0",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "esbuild": "^0.20.0",
    "eslint": "^8.56.0",
    "eslint-config-gemini-testing": "^3.0.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "standard-version": "^9.5.0",
    "typescript": "^5.3.3"
  }
}
